<launch>

    <arg name="ref_frame" default="vicon" />     <!-- Ed1 for drone base, vicon for world -->
    <arg name="camera_frame" default="camera_0_down_link" />
    <arg name="marker_frame"    default="aruco_marker_frame"/>
    <arg name="markerSize"      default="0.10"/> 
    <arg name="drone_base" default="/Ed1" />                <!-- /vicon Using Vicon TF as the Drone Base (drone_base) -->
    <arg name="fps" default="5" /> 

    <include file="$(find gscam)/examples/jetson_csi_cam.launch" >
      <arg name="drone_base" value="$(arg drone_base)" />
      <arg name="fps" value="$(arg fps)" />
    </include>
    <!--include file="$(find image_proc)/launch/image_proc.launch" ns="camera_0" /-->

    <node pkg="image_proc" type="image_proc" name="image_proc" ns="camera_0">
    </node>

    <include file="$(find aruco_ros)/launch/marker_publisher.launch" >
      <arg name="ref_frame" value="$(arg ref_frame)" />
      <arg name="camera_frame" value="$(arg camera_frame)"/>
      <arg name="markerSize" value="$(arg markerSize)"/>
      <arg name="marker_frame"    default="aruco_marker_frame"/>
    </include>

</launch>

